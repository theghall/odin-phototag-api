module Validate
  class PhotoRequests
    include ApplicationHelper, ActiveModel::Validations
    attr_accessor :params, :APITOKEN, :number, :number_present

    validate :is_alphanumeric_token
    validates :APITOKEN, presence: true, length: { is: 32 }
    validates :number, presence: true, numericality: { only_integer: true }, if: :optional_present?("number")

    def initialize(params={})
      @params = params
      @APITOKEN = params[:APITOKEN]
      @number = number_or_nil(params[:number])
      ActionController::Parameters.new(JSON.parse(params.to_json)).permit(:format, :APITOKEN, :number)
    end

    private

      def is_alphanumeric_token
        match = /^[a-z0-9]+$/.match(@APITOKEN)
        if match.nil? || match.string != @APITOKEN
          errors.add(:APITOKEN, "must contain letters and numbers only")
        end
      end

      def optional_present?(field)
        false
      end
  end
end
